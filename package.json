{
  "name": "digitallinked-monorepo",
  "version": "1.0.0",
  "description": "Digital Linked - Your Strategic Partner for Digital Success",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "type-check": "turbo type-check",
    "web:dev": "turbo dev --filter=web",
    "mobile:dev": "turbo dev --filter=mobile",
    "web:build": "turbo build --filter=web",
    "mobile:build": "turbo build --filter=mobile",
    "vercel:build": "turbo build --filter=@digitallinked/utils --filter=@digitallinked/ui && turbo build --filter=web",
    "build:packages": "turbo build --filter=@digitallinked/utils --filter=@digitallinked/ui"
  },
  "devDependencies": {
    "@turbo/gen": "^1.12.4",
    "turbo": "^1.12.4",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.15.4",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
